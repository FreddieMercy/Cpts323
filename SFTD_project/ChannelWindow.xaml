<Window x:Class="SFTD_project.ChannelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create new channel" Height="142.28" Width="384.4">
    <Grid>
        <Label Content="Channel Name" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="10,10,0,0" Height="25" Width="94"/>
        <Label Content="Group" 
        	    HorizontalAlignment="Left" VerticalAlignment="Top" 
        	    Margin="10,40,0,0" Height="25" Width="94"/>
        <TextBox x:Name="Input" 
                 VerticalAlignment="Top"
                 Margin="109,10,10,0" Height="25"/>

        <ComboBox x:Name="Groups" 
                  VerticalAlignment="Top"
                  Margin="109,40,10,0" Height="25"
                  DisplayMemberPath="Name"/>

        <Button x:Name="Confirm" Content="Confirm" 
                HorizontalAlignment="Right"  VerticalAlignment="Bottom"
                Margin="0,0,110,10" Height="20" Width="95" 
                Click="Confirm_Click"/>
        <Button Content="Cancel" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,10,10" Height="20" Width="95" 
                IsCancel="True"/>
    </Grid>
</Window>
